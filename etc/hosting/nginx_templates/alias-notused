server {
        listen   $FRONTEND_IP:443;
	listen   [::]:443;
        ssl    on;
        ssl_certificate    	/etc/nginx/ssl/certificate.crt;
        ssl_certificate_key  	/etc/nginx/ssl/certificate.key;	

        include /etc/nginx/hosting/backend_ip1/*.conf;

        access_log /dev/null;
        error_log  /var/log/nginx/hosting/$BACKEND_IP_error.log;

        client_header_timeout           40000;
        location / {
                proxy_pass http://$BACKEND_IP;

                proxy_connect_timeout   40000;
                proxy_send_timeout      40000;
                proxy_read_timeout      40000;
                client_body_timeout     40000;
                send_timeout            40000;
                break;
        }
}


